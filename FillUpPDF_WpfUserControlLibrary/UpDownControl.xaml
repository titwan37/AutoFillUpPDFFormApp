<UserControl x:Class="FillUpPDFUserControlLibrary.UpDownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FillUpPDFUserControlLibrary"
             mc:Ignorable="d"
             d:DesignHeight="32"
             d:DesignWidth="104">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="txtNum" x:FieldModifier="private" Margin="5,5,0,5" Width="50" Text="1" TextAlignment="Right" TextChanged="txtNum_TextChanged" />
        <Button x:Name="cmdUp" x:FieldModifier="private" Margin="5,5,0,5" Content="˄" Width="20" Click="cmdUp_Click" />
        <Button x:Name="cmdDown" x:FieldModifier="private" Margin="0,5,0,5"  Content="˅" Width="20" Click="cmdDown_Click" />
    </StackPanel>
</UserControl>